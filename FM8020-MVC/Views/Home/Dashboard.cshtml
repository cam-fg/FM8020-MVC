@model IEnumerable<FM8020_MVC.Models.DefectModel>

@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Dashboard</h1>
    <p>Hier sind alle aktuellen Mängel einzusehen.</p>
</div>
<div class="row">
    @foreach (DefectModel defect in Model) {
    <div class="w-25 p3">
        <div class="card bg-light mb-3" style="max-width: 20rem;">
            <div class="card-body">
                <h5 class="card-title">@defect.Title</h5>
                <h6 class="card-subtitle mb-2 text-muted">
                @Html.DisplayFor(modelItem => defect.Room.Facility.FacilityCode), Raum @Html.DisplayFor(modelItem => defect.Room.RoomNumber)
                </h6>
                <p class="card-text">@defect.Description</p>
                <a href="#" class="btn btn-primary">Details</a>
            </div>
        </div>
    </div>
    }
</div>
