@model FM8020_MVC.Models.DefectModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Defekt Melden</h1>

<h4>Geben Sie hier die Informationen zum Defekt ein.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input readonly class="form-control" name="roomNumber" value="@(Model.Room != null ? @Model.Room.RoomNumber : "")" />
            </div>
            <div class="form-group">
                <label asp-for="Timestamp" class="control-label"></label>
                <input readonly asp-for="Timestamp" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddThh:mm:ss")" />
                <span asp-validation-for="Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefectType" class="control-label"></label>
                <select asp-for="DefectType" class="form-control" asp-items="Html.GetEnumSelectList<FM8020_MVC.Models.ComponentType>()"></select>
                <span asp-validation-for="DefectType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Details (Optional):</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Absenden" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
